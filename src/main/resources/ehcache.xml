<config xmlns='http://www.ehcache.org/v3' xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ehcache.org/v3 https://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache alias="stockSearchCache">
        <expiry>
            <ttl unit="hours">12</ttl>
        </expiry>
        <heap unit="entries">100</heap>
    </cache>

    <cache alias="stockDataCache">
        <expiry>
            <ttl unit="seconds">15</ttl>
        </expiry>
        <heap unit="entries">100</heap>
    </cache>
</config>